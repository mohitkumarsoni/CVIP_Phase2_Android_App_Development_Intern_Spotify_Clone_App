<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="18dp"
        android:backgroundTint="@color/spotify_dark_grey_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="26dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="18dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="16sp"
                app:cardElevation="6dp"
                android:layout_marginHorizontal="30dp">
                <ImageView
                    android:id="@+id/podcast_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/pod4"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/pod_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Uplift Your Energy"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:letterSpacing="0.1"
                android:layout_below="@+id/image_card"
                android:layout_marginHorizontal="0sp"
                android:minLines="1"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/episode_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pod_title_tv"
                android:text="Episode . "
                android:textColor="@color/hint_grey"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/episode_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pod_title_tv"
                android:layout_toEndOf="@+id/episode_text_tv"
                tools:text="Ranveer talks show"
                android:maxLines="1"
                android:minLines="1"
                android:ellipsize="end"
                android:textColor="@color/hint_grey"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/pod_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/episode_name_tv"
                tools:text="listen and learn how to uplift your energy how to uplift your energy "
                android:textColor="@color/hint_grey"
                android:maxLines="3"
                android:minLines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:layout_marginTop="22sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pod_desc_tv"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="18dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">
                <ImageView
                    android:id="@+id/plus_ic"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/circle_add_ic"/>
                <ImageView
                    android:id="@+id/three_dots_ic"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_toEndOf="@+id/plus_ic"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/three_dots_ic"/>
                <TextView
                    android:id="@+id/pod_time_duration_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/play_ic"
                    tools:text="06:32"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginEnd="0dp"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/play_ic"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/play_online_ic"/>
            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>