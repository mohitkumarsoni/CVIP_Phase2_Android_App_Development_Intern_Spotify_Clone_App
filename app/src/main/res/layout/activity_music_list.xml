<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:paddingHorizontal="0dp"
    tools:context=".activity.Music_List_Activity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:layout_above="@id/song_list_activity_BottomNavigationView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageButton
                android:id="@+id/back_btn_ib"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/arrow_back_ic"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <RelativeLayout
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back_btn_ib">
                <EditText
                    android:id="@+id/search_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Find a playlist"
                    android:textColorHint="@color/hint_grey"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_not_selected_grey"
                    android:drawableStart="@drawable/search_ic_1"
                    android:layout_toStartOf="@id/sort_btn"
                    android:layout_centerVertical="true"
                    android:drawableTint="@color/spotify_light_grey_2"
                    android:drawablePadding="16dp"
                    android:textSize="20sp"
                    android:padding="6dp"
                    android:layout_marginTop="6dp"/>
                <Button
                    android:id="@+id/sort_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Sort"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/spotify_light_grey"
                    android:layout_marginStart="8dp"/>

            </RelativeLayout>
            <ImageView
                android:id="@+id/poster_iv"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_below="@+id/search_layout"
                android:layout_marginTop="26dp"
                android:layout_marginHorizontal="46dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/lata"/>
            <TextView
                android:id="@+id/coverText_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/poster_iv"
                tools:text="Name of song"
                android:textColor="@color/spotify_light_grey_2"
                android:textSize="18sp"
                android:textStyle="normal"
                android:letterSpacing="0.07"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/playlist_time_duration_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coverText_tv"
                android:text="23:60"
                android:textColor="@color/spotify_light_grey"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:id="@+id/five_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playlist_time_duration_tv">
                <ImageButton
                    android:id="@+id/add_ib"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/circle_add_icon"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:id="@+id/download_ib"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/circle_download_icon"
                    android:layout_toEndOf="@id/add_ib"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:id="@+id/three_dots_ib"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/three_dots_icon"
                    android:layout_toEndOf="@id/download_ib"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:id="@+id/shuffle_ib"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/green_shuffle_icon"
                    android:layout_alignParentEnd="false"
                    android:layout_toStartOf="@+id/play_ib"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:id="@+id/play_ib"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/green_play_online_ic"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/five_options_layout"
                android:background="@color/white"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/song_list_activity_BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_bottom_nav_view"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>